<%= form_with model: user do |form| %>
  <div>
    <%= form.label :username, title: 'Your username here:' %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: 'example@example.com' %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, 'error') %> prohibited this info from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      </ul>
    </div>
<% end %>